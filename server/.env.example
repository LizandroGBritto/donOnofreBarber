# =================================
# CONFIGURACIÓN DE ENTORNO
# =================================
# Copia este archivo como .env y configura tus valores

# Base de datos
DB_NAME=OnofreDb
MONGODB_URI=mongodb://127.0.0.1:27017/OnofreDb

# Servidor
PORT=8000
NODE_ENV=development

# Seguridad
SECRET=tu_clave_secreta_jwt_aqui
JWT_SECRET=tu_clave_secreta_jwt_aqui

# CORS y Frontend
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:8000

# =================================
# NOTIFICACIONES PUSH (VAPID)
# =================================
VAPID_PUBLIC_KEY=tu_clave_publica_vapid_aqui
VAPID_PRIVATE_KEY=tu_clave_privada_vapid_aqui
VAPID_EMAIL=tu_email@ejemplo.com

# =================================
# INTEGRACIÓN DE PAGOS (ADAM'S PAY)
# =================================
ADAM_API_KEY=tu_api_key_adams_pay_aqui
ADAM_API_SECRET=tu_api_secret_adams_pay_aqui
ADAM_API_URL=https://staging.adamspay.com/api/v1

# =================================
# CONFIGURACIÓN DE ARCHIVOS
# =================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# =================================
# PRODUCCIÓN - Descomentar y configurar:
# =================================
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/OnofreDb
# CLIENT_URL=https://tu-dominio.com
# SERVER_URL=https://api.tu-dominio.com
# ADAM_API_URL=https://production.adamspay.com/api/v1